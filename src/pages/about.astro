---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { getEntry } from "astro:content";

// Busca o conteúdo dinâmico do CMS
const aboutData = await getEntry("pages", "about");
const { title, description } = aboutData.data;
---

<BaseLayout
  title={`${title} - Blicksel Picks`}
  description={description}
>
  <Header />

  <main class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <section class="bg-white shadow-sm">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <div class="text-center">
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
            {title}
          </h1>
          <p class="text-xl text-gray-600 leading-relaxed">
            {description}
          </p>
        </div>
      </div>
    </section>

    <!-- Dynamic Markdown Content -->
    <section class="py-16">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white rounded-lg shadow-sm p-8 md:p-12 mb-12">
          <div class="prose prose-lg max-w-none">
            {aboutData.render().Content}
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
