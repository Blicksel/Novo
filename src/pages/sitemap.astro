---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

// Lista de links do site
const links = [
  { name: "Home", url: "/" },
  { name: "Blog", url: "/blog" },
  { name: "Categories", url: "/categories" },
  { name: "Reviews", url: "/reviews" },
  { name: "About Us", url: "/about" },
  { name: "Contact", url: "/contact" },
  { name: "Privacy Policy", url: "/privacy-policy" },
  { name: "Affiliate Disclosure", url: "/affiliate-disclosure" },
  { name: "Terms of Service", url: "/terms-of-service" }
];
---

<BaseLayout title="Sitemap | Blicksel Picks" description="Quick links to all pages and sections of Blicksel Picks for easy navigation.">
  <Header />

  <main class="min-h-screen bg-gray-50">
    <section class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="bg-white rounded-lg shadow-sm p-8 md:p-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-8">Sitemap</h1>
        <p class="text-gray-600 mb-6">Easily navigate all pages and sections of our site:</p>

        <ul class="grid grid-cols-1 md:grid-cols-2 gap-4">
          {links.map(link => (
            <li>
              <a href={link.url} class="text-primary-600 hover:underline">{link.name}</a>
            </li>
          ))}
        </ul>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
